{% extends 'structure/base.html.twig' %}

{% set currentPage = 'Error' ~ (statusCode ? ' - ' ~ statusCode : '') %}

{% block pageTitle %}
	{{ parent() }}
	-
	{{ currentPage }}
{% endblock %}

{% block content %}
	{% include 'structure/header.html.twig' with {'currentRoute': '', 'breadcrumbs': [
	{ 'link': path('app_home'), 'name': 'Home' },
	{ 'link': '', 'name': currentPage }
]} %}

	<section class="section">
		{% include 'structure/title.html.twig' with {'currentPage': currentPage} %}
		{% include 'structure/notifications.html.twig' %}

			<p class="notification error">{{ message|nl2br }}</p>
			<p>Click <a href="{{ path('app_home') }}">here</a> to return to the homepage.</p>
	</section>

	{% include 'structure/footer.html.twig' %}
{% endblock %}
